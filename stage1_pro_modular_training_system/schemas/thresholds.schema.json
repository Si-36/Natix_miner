{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Thresholds Schema (Phase 1 Policy)",
  "type": "object",
  "properties": {
    "exit_threshold": {"type": "number"},
    "fnr_on_exits": {"type": "number"},
    "coverage": {"type": "number"},
    "exit_accuracy": {"type": "number"},
    "sweep_results": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "threshold": {"type": "number"},
          "coverage": {"type": "number"},
          "exit_accuracy": {"type": "number"},
          "fnr_on_exits": {"type": "number"}
        },
        "required": ["threshold", "coverage", "exit_accuracy", "fnr_on_exits"]
      }
    },
    "val_calib_metrics": {"type": "object"},
    "target_fnr_exit": {"type": "number"}
  },
  "required": ["exit_threshold", "fnr_on_exits", "coverage", "exit_accuracy", "sweep_results", "target_fnr_exit"]
}
