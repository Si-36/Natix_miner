{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Gate Parameters Schema (Phase 2+)",
  "description": "Gate calibrator parameters for exit decision",
  "type": "object",
  "required": ["a", "b"],
  "properties": {
    "a": {
      "type": "number",
      "description": "Platt scaling slope parameter"
    },
    "b": {
      "type": "number",
      "description": "Platt scaling intercept parameter"
    },
    "fitted": {
      "type": "boolean",
      "description": "Whether calibrator has been fitted"
    }
  }
}
